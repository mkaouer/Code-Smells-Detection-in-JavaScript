#!/bin/sh
#
# $Id$
#
umask 007
cd `dirname $0`/.. || exit 1

if [ -z "$JAVA_HOME" ] ; then
  JAVA=`which java`
  if [ -z "$JAVA" ] ; then
    echo "Cannot find JAVA. Please set your PATH."
    exit 1
  fi
  JAVA_HOME=`dirname $JAVA`/..
fi
JAVA=$JAVA_HOME/bin/java

CLASSPATH=`echo lib/*.jar | tr ' ' ':'`:$JAVA_HOME/lib/tools.jar:$CLASSPATH

if [ -z $1 ] ; then
   ARG="-projecthelp"
fi

$JAVA -classpath $CLASSPATH org.apache.tools.ant.Main "$@" $ARG -buildfile src/build.xml
