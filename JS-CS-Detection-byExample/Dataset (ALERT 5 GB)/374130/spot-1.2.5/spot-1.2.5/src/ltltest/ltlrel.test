# Check for the constant_term visitor

. ./defs || exit 1

set -e

t()
{
   cat > tmp.$$
   run 0 ../ltlrel "`head -n 1 tmp.$$`" > out.$$
   sed 1d tmp.$$ > exp.$$
   diff out.$$ exp.$$
}

t <<EOF
a & Xb & c
p0 & Xp1
  p0   ->   a & c
  p1   ->   b
EOF

t <<EOF
a & b & GF(a | c) & FG(a | c)
p0 & p1 & GF(p0 | p2) & FG(p0 | p2)
  p0   ->   a
  p1   ->   b
  p2   ->   c
EOF

t <<EOF
b & GF(a | c) & FG(a | c)
p0 & GFp1 & FGp1
  p0   ->   b
  p1   ->   a | c
EOF

t <<EOF
G(d & e) | FG(Xf| !c) | h | i
p0 | Gp1 | FG(p2 | Xp3)
  p0   ->   h | i
  p1   ->   d & e
  p2   ->   !c
  p3   ->   f
EOF

t <<EOF
a <-> b
p0
  p0   ->   a <-> b
EOF

t <<EOF
(a <-> b) & X(b -> c)
(p0 <-> p1) & X(p1 -> p2)
  p0   ->   a
  p1   ->   b
  p2   ->   c
EOF
