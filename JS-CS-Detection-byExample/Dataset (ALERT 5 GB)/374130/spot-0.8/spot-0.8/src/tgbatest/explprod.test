. ./defs

set -e

cat >input1 <<EOF
acc = p1;
s1, s3, "a", p1;
s1, s2, "b", p1;
s2, s1, "!a", p1;
s2, s3, "c", p1;
EOF

cat >input2 <<EOF
acc=p2 p3;
s1, s2, "b", p2;
s2, s1, "a", p3;
EOF

cat >expected <<EOF
acc = "p3" "p2" "p1";
"s1 * s1", "s3 * s2", "a & b", "p2" "p1";
"s1 * s1", "s2 * s2", "b", "p2" "p1";
"s2 * s2", "s3 * s1", "a & c", "p3" "p1";
EOF

run 0 ../explprod input1 input2 |
  sed 's/b & a/a \& b/;s/c & a/a \& c/' > stdout

cat stdout
diff stdout expected
rm input1 input2 stdout expected
