. ./defs

set -e

cat >input1 <<EOF
acc = p1 p2;
s1, s2, "!a", p1;
s1, s3, "!b", p2;
EOF

cat >input2 <<EOF
acc = p2 p3;
s1, s2, "b", p2;
s1, s3, "a", p3;
EOF

cat >expected <<'EOF'
acc = "p2$1" "p3" "p2" "p1";
"s1 * s1", "s2 * s2", "b & !a", "p2$1" "p1";
"s1 * s1", "s3 * s3", "a & !b", "p3" "p2";
EOF

run 0 ../explprod input1 input2 |
  sed 's/!a & b/b \& !a/;s/!b & a/a \& !b/'> stdout

cat stdout
diff stdout expected
rm input1 input2 stdout expected
