. ./defs

set -e

run 0 ./explicit > stdout

cat >expected <<\EOF
digraph G {
  "*1" [label="", style=invis, height=0]
  "*1" -> 1
  "*2" [label="", style=invis, height=0]
  "*2" -> 2
  1 [label="state 0"]
  1 -> 3 [label="e1\n"]
  2 [label="state 2"]
  2 -> 3 [label="e3\n{a2, a3}"]
  3 [label="state 1"]
  3 -> 2 [label="e2\n{a1}"]
}
EOF

diff stdout expected

rm stdout expected
