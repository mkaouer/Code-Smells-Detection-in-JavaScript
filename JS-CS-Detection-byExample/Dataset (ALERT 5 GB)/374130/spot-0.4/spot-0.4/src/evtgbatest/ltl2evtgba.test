. ./defs

set -e

check ()
{
  run 0 ./ltl2evtgba "$1"
  run 0 ./ltl2evtgba -Uun1,un2,un3 "$1"
}

# We don't check the output, but just running these might be enough to
# trigger assertions.

check a
check 'a U b'
check 'X a'
check 'a & b & c'
check 'a | b | (c U (d & (g U (h ^ i))))'
check 'Xa & (b U !a) & (b U !a)'
check 'Fa & Xb & GFc & Gd'
check 'Fa & Xa & GFc & Gc'
check 'Fc & X(a | Xb) & GF(a | Xb) & Gc'
check 'a R (b R c)'
check '(a U b) U (c U d)'

check '((Xp2)U(X(1)))*(p1 R(p2 R p0))'
