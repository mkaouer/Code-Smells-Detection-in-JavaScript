. ./defs

set -e

cat >input1 <<EOF
acc = p1;
s1, s3, "a", p1;
s1, s2, "b", p1;
s2, s1, "!a", p1;
s2, s3, "c",;
EOF

cat >input2 <<EOF
acc = p2 p3;
s1, s2, "b", p2;
s2, s1, "a", p3;
EOF

cat >input3 <<EOF
acc = p4;
s1, s2, "a",;
s1, s3, "b",;
s3, s2,, p4;
s2, s3,, p4;
EOF

cat >expected <<EOF
acc = "p4" "p3" "p2" "p1";
"s1 * s1 * s1", "s3 * s2 * s2", "a & b", "p2" "p1";
"s1 * s1 * s1", "s2 * s2 * s2", "a & b", "p2" "p1";
"s1 * s1 * s1", "s3 * s2 * s3", "a & b", "p2" "p1";
"s1 * s1 * s1", "s2 * s2 * s3", "b", "p2" "p1";
"s2 * s2 * s2", "s3 * s1 * s3", "a & c", "p4" "p3";
"s2 * s2 * s3", "s3 * s1 * s2", "a & c", "p4" "p3";
EOF

run 0 ../tripprod input1 input2 input3 |
  sed 's/b & a/a \& b/;s/c & a/a \& c/'> stdout

cat stdout
diff stdout expected
rm input1 input2 input3 stdout expected
