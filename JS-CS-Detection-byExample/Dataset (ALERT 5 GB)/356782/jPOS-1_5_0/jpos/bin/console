#! /bin/sh

# $Revision$ $Date$

# example 1: bin/console -lmk src/ext-examples/smadapter/lmk ck 128 tpk 99C2B0C250C7190DC5B11D1B28F5C007
# example 1: this should return the check value: 01D863 (givin that you have not changed or rebuilt the LMK's)

cd `dirname $0`/..

if [ -z "$JAVA_HOME" ] ; then
  JAVA=`which java`
  if [ -z "$JAVA" ] ; then
    echo "Cannot find 'java'. check your PATH."
    exit 1
  fi
  JAVA_BIN=`dirname $JAVA`
  JAVA_HOME=$JAVA_BIN/..
fi

JAVA=$JAVA_HOME/bin/java

CLASSPATH=build/classes:lib/xerces_1_2_3.jar:lib/xalan_2_0_0.jar:lib/log4j.jar:lib/jdom.jar
CLASSPATH=`echo ext/*.jar | tr ' ' ':'`:$CLASSPATH

$JAVA -cp $CLASSPATH org.jpos.security.jceadapter.Console $*

