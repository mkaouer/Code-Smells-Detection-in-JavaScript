<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!-- This is a theme that will adjust itself depending on the API version. 
		The default definition is the safe one, using a theme that has always been 
		defined. Look at values-11/styles.xml for a variation that is selected when 
		the holographic theme is available. -->
	<style name="ThemeHolo" parent="@android:style/Theme">

		<item name="ic_action_compose">@drawable/ic_action_compose_dark</item>
		<item name="ic_action_delete">@drawable/ic_action_delete_dark</item>
		<item name="ic_menu_copy_holo">@drawable/ic_menu_copy_holo_dark</item>
		<item name="ic_menu_search_holo">@drawable/ic_menu_search_holo_dark</item>
		<item name="ic_menu_settings_holo">@drawable/ic_menu_settings_holo_dark</item>
		<item name="ic_menu_share_holo">@drawable/ic_menu_share_holo_dark</item>
		<item name="ic_menu_paste_holo">@drawable/ic_menu_paste_holo_dark</item>

	</style>

	<style name="ThemeHoloLightDarkActonBar" parent="@android:style/Theme.Light">
		<item name="ic_action_compose">@drawable/ic_action_compose_dark</item>
		<item name="ic_action_delete">@drawable/ic_action_delete_dark</item>
		<item name="ic_menu_copy_holo">@drawable/ic_menu_copy_holo_dark</item>
		<item name="ic_menu_search_holo">@drawable/ic_menu_search_holo_dark</item>
		<item name="ic_menu_settings_holo">@drawable/ic_menu_settings_holo_dark</item>
		<item name="ic_menu_share_holo">@drawable/ic_menu_share_holo_dark</item>
		<item name="ic_menu_paste_holo">@drawable/ic_menu_paste_holo_dark</item>
	</style>

	<style name="ThemeHoloDialogNoActionBar" parent="@android:style/Theme.Dialog">
		<item name="ic_action_delete">@drawable/ic_action_delete_light</item>
		<item name="ic_menu_copy_holo">@drawable/ic_menu_copy_holo_light</item>
		<item name="ic_menu_search_holo">@drawable/ic_menu_search_holo_light</item>
		<item name="ic_menu_settings_holo">@drawable/ic_menu_settings_holo_light</item>
		<item name="ic_menu_share_holo">@drawable/ic_menu_share_holo_light</item>
		<item name="ic_menu_paste_holo">@drawable/ic_menu_paste_holo_light</item>
	</style>

</resources>